<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= settings.name %></title>
  <%- include('../components/style') %>
</head>

<body class="bg-gray-50 font-sans">
  <%- include('../components/navigation') %>

  <div class="md:pl-64 flex flex-col min-h-screen bg-gray-100">
    <main class="flex-1 pb-16">
      <div class="container mx-auto px-6 py-8">
        <div class="flex items-center justify-between mb-8">
          <div class="flex items-center space-x-4">
            <div class="bg-blue-600 text-white rounded-lg p-4">
              <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="w-6 h-6" viewBox="0 0 24 24">
                <path fill-rule="evenodd"
                  d="M12 1.5a5.25 5.25 0 0 0-5.25 5.25v3a3 3 0 0 0-3 3v6.75a3 3 0 0 0 3 3h10.5a3 3 0 0 0 3-3v-6.75a3 3 0 0 0-3-3v-3c0-2.9-2.35-5.25-5.25-5.25Zm3.75 8.25v-3a3.75 3.75 0 1 0-7.5 0v3h7.5Z"
                  clip-rule="evenodd" />
              </svg>
            </div>
            <div>
              <h2 class="text-xl font-semibold text-gray-800">Security</h2>
              <p class="text-sm text-gray-500">View your credentials and configure security settings.</p>
            </div>
          </div>
        </div>

        <div class="space-y-6">
          <div class="bg-white rounded-xl shadow-sm overflow-hidden">
            <dl class="divide-y divide-gray-200">
              <div class="px-6 py-4 flex justify-between items-center">
                <dt class="text-sm font-medium text-gray-900">Username</dt>
                <dd class="text-sm text-gray-700 flex items-center space-x-2">
                  <span class="bg-gray-200 text-gray-500 px-4 py-2 rounded-full">
                    <%= pterodactyl.username %>
                  </span>
                </dd>
              </div>
              <div class="px-6 py-4 flex justify-between items-center">
                <dt class="text-sm font-medium text-gray-900">Email</dt>
                <dd class="text-sm text-gray-700 flex items-center space-x-2">
                  <span class="bg-gray-200 text-gray-500 px-4 py-2 rounded-full">
                    <%= pterodactyl.email %>
                  </span>
                </dd>
              </div>
              <div class="px-6 py-4 flex justify-between items-center">
                <dt class="text-sm font-medium text-gray-900">Password</dt>
                <dd class="text-sm text-gray-700 flex items-center space-x-2">
                  <ul class="w-full flex items-center">
                    <li class="flex items-center justify-between py-2 w-full">
                      <div class="flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                          stroke="currentColor" class="h-5 w-5 text-gray-400">
                          <path stroke-linecap="round" stroke-linejoin="round"
                            d="M15.75 5.25a3 3 0 013 3m3 0a6 6 0 01-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25v-2.818c0-.597.237-1.17.659-1.591l6.499-6.499c.404-.404.527-1 .43-1.563A6 6 0 1121.75 8.25z" />
                        </svg>
                        <span class="ml-4 truncate font-medium text-gray-600">
                          <% if (req.session.password) { %>
                            <%= req.session.password %>
                          <% } else { %>
                            *************
                          <% } %>
                        </span>
                      </div>
                      <div class="ml-4">
                        <% if (req.session.password) { %>
                          <a href="../security"
                            class="bg-blue-600 text-white hover:bg-blue-700 px-4 py-2 rounded-xl transition">Hide</a>
                        <% } else { %>
                          <a href="../regen"
                            class="bg-blue-600 text-white hover:bg-blue-700 px-4 py-2 rounded-xl transition">Show</a>
                        <% } %>
                      </div>
                    </li>
                  </ul>
                </dd>
              </div>
            </dl>
          </div>
        </div>
      </div>
    </main>
  </div>

  <%- include('../components/style') %>
</body>
